<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="pOrtegaSemana7.Registrar"
             Title="Registrar">
    <VerticalStackLayout
        VerticalOptions="Center" 
HorizontalOptions="Center">
        <Label 
            Text="Registrar Nuevo usuario"/>
        <Entry x:Name="txtNombre" Placeholder="Nombre"></Entry>
        <Entry x:Name="txtApellido" Placeholder="Apellido"></Entry>
        <Entry x:Name="txtEdad" Placeholder="Edad"></Entry>
        <Button x:Name="btnRegistrarForm" Text="Guardar" Clicked="btnRegistrarForm_Clicked"></Button>
    </VerticalStackLayout>
</ContentPage>