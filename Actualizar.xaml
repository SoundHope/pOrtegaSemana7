<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="pOrtegaSemana7.Actualizar"
             Title="Actualizar">
    <VerticalStackLayout
        VerticalOptions="Center" 
HorizontalOptions="Center">
        <Label 
            Text="Actualizar o Eliminara usuario"/>
        <Entry x:Name="txtNombre" Placeholder="Nombre"></Entry>
        <Entry x:Name="txtApellido" Placeholder="Apellido"></Entry>
        <Entry x:Name="txtEdad" Placeholder="Edad"></Entry>
        <Entry x:Name="txtCodigo" Placeholder="Codigo" IsReadOnly="true"></Entry>
        <Button x:Name="btnActualizar" Text="Actualizar" Clicked="btnActualizar_Clicked"></Button>
        <Button x:Name="btnEliminar" Text="Eliminar" Clicked="btnEliminar_Clicked"></Button>
    </VerticalStackLayout>
</ContentPage>